model User {
  id         Int      @id @default(autoincrement())
  email      String   @db.VarChar(255) @unique
  username   String   @db.VarChar(255) @unique
  password   String   @db.VarChar(255)   
  teams      Teams[]
  favorites  Favorites[]
}

model Teams {
  id            Int      @id @default(autoincrement())
  user_id       Int
  user          User     @relation(fields:  [user_id], references: [id])
  team_name     String
  pokemon_teams PokemonTeams[]
  favorites     Favorites[]
}

model PokemonTeams {
  id          Int      @id @default(autoincrement())
  teams_id    Int      
  teams       Teams    @relation(fields: [teams_id], references: [id])
  pokemon_id  Int
  pokemon     Pokemon  @relation(fields: [pokemon_id], references: [id])
  move1       String   
  move2       String?
  move3       String?
  move4       String?
  held_item   String?
  nature      String?
  ability     String?
}

model Pokemon {
  id            Int       @id @default(autoincrement())
  pokemon_teams PokemonTeams[]
  name          String
  type1         String
  type2         String?
  stats         String
}

model Favorites{
  id        Int      @id @default(autoincrement())
  user_id   Int
  user      User     @relation(fields: [user_id], references: [id])
  teams_id  Int
  teams     Teams    @relation(fields: [teams_id], references: [id])
}